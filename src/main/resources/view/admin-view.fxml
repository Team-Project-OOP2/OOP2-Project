<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hotelmanagement.controller.AdminController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Admin Dashboard"
           style="-fx-font-size: 26; -fx-font-weight: bold;"/>

    <Label text="Welcome, Admin!"/>

    <!-- Buttons panel -->
    <VBox spacing="10" alignment="CENTER">

        <Button fx:id="btnManageUsers"
                text="Manage Users"
                prefWidth="200"
                onAction="#openManageUsers"/>

        <Button fx:id="btnManageRooms"
                text="Manage Rooms"
                prefWidth="200"
                onAction="#openManageRooms"/>

        <Button fx:id="btnManageReservations"
                text="Manage Reservations"
                prefWidth="200"
                onAction="#openManageReservations"/>

        <Button fx:id="btnManageServices"
                text="Manage Services"
                prefWidth="200"
                onAction="#openManageServices"/>

        <Button fx:id="btnLogout"
                text="Logout"
                prefWidth="200"
                onAction="#logout"/>
    </VBox>

</VBox>
