<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hotelmanagement.controller.ServiceFormController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Service Form" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Service Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtPrice" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtDescription" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>

</VBox>
